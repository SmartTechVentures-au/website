---
import Container from "./Container.astro"
---
<footer class="bg-lime bg-fixed bg-bottom text-black">
    <Container>
    <div class="py-6">
        <div class="flex flex-col items-center justify-between md:flex-row">
            <div class="flex items-center space-x-3 rtl:space-x-reverse">
                <img class="w-auto" src="/Logo.svg" alt="Logo">
            </div>
            <div class="flex mt-4 md:m-0">
                <div class="-mx-4">
                    <span class="copy-right dis-blk">Smart Tech<i class="fa fa-heart cyan-color"></i></span>
                    <span class="social">
                      <a href="https://twitter.com/smarttechau"><i class="fa fa-twitter"></i></a>
                      <a href="https://www.linkedin.com/company/smart-tech-au"><i class="fa fa-linkedin"></i></a>
                    </span>
                </div>
            </div>
        </div>
    </div>
    </Container>
</footer>