---
import Container from "./Container.astro";
---

<Container>
  <div class="relative flex flex-col items-center md:flex-row" id="expertise">
    <div class="row items-center py-5 md:pr-20 md:w-3/12 md:py-10">
      <div class="text-left md:text-left space-y-3 bg-lime">
        <h2 class="text-4xl font-medium leading-none sm:text-6xl">Experts</h2>
      </div>
    </div>
    <div class="flex items-center py-5 md:w-9/12 md:py-10">
      <p class="text-xl font-normal leading-7 text-left md:text-left">
        With extensive multi-cloud experience we are technology experts spanning
        software and data engineering, architecture and analytics.
      </p>
    </div>
  </div>

  <div class="relative flex flex-col items-center md:flex-row">
    <div class="max-w-screen-xl mx-auto px-6 md:px-14 xl:px-14">
      <img
        src="/expertise.webp"
        alt="Expertise and Competencies"
        fetchpriority="high"
      />
    </div>
  </div>